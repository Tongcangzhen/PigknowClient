<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ldjg.pigknow.OtherFarmActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="选择开始日期"
            android:layout_gravity="center"
            android:id="@+id/textview_date_start_find"
            android:background="#F0F0F0"
            android:clickable="true"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="0.4"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#aa000000"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="选择结束日期"
            android:layout_gravity="center"
            android:id="@+id/textview_date_end_find"
            android:background="#F0F0F0"
            android:clickable="true"
            />



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="@string/find_farms"
        android:layout_gravity="center"
        android:textSize="20dp"
       android:layout_marginLeft="20dp"
        android:textColor="@color/md_pink_300"
        android:id="@+id/textview_farms_find"
        android:autoLink="all"
        android:layout_weight="4" />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="查看"
            android:id="@+id/button_find_other_farm"
            android:layout_marginRight="20dp"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/pig_recyclerview_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        >

    </android.support.v7.widget.RecyclerView>

</LinearLayout>
